{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@utils/ts-config-types",
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["**/*.test.*"],
  "compilerOptions": {
    "outDir": "dist/types",
    "baseUrl": "src",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "@testing-library/jest-dom"]
  }
}
